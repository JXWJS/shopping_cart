<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="entity.User" table="user">
		<id column="id" name="id" type="int">
			<generator class="native"/>		<!-- 主键生成策略 -->
		</id>
		<property name="username" length="30" type="string"/>
		<property name="password" length="30" type="string"/>
		<property name="realname" length="30" type="string"/>
		<property name="tel" length="30" type="string"/>
		<property name="email" length="20" type="string"/>
	</class>
</hibernate-mapping>
