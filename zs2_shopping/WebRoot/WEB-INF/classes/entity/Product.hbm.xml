<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="entity.Product" table="product">
		<id column="id" name="id" type="int">
			<generator class="native"/>		<!-- 主键生成策略 -->
		</id>
		<property name="name" length="50" type="string"/>
		<property name="count" length="50" type="int"/>
		<property name="price" length="50" type="int"/>
		<property name="picUrl" length="50" type="string"/>
		<property name="comment" length="100" type="string"/>
	</class>
</hibernate-mapping>
